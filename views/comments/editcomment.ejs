<div class="container text-center">
    <div class="row">
        <div class="col-10 col-md-6 pb-4 my-4 mx-auto border border-dark rounded-0">
            <h1>Edit comment</h1>
            <form action="/campgrounds/<%=CampgroundID%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <input class="form-control mb-3" type="text" name="comment[text]" value="<%=comment.text%>">
                <button class="btn btn-outline-dark btn-block rounded-0">Submit</button>
            </form>
        </div>
    </div>
</div>
